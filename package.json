{
  "name": "we-spamfighter",
  "version": "1.1.6",
  "description": "Advanced spam protection for WordPress using AI-powered detection",
  "author": {
    "name": "webentwicklerin, Gabriele Laesser",
    "url": "https://webentwicklerin.at"
  },
  "license": "GPL-2.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/gbyat/we-spamfighter"
  },
  "scripts": {
    "pot": "node scripts/update-pot.js",
    "build:assets": "node scripts/build-assets.js",
    "update:tested": "node scripts/update-tested-version.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "sync-version": "node scripts/sync-version.js",
    "check": "npm run check:php && npm run check:js",
    "check:php": "echo 'PHP checks - install phpcs locally or use: composer require --dev wp-coding-standards/wpcs'",
    "check:js": "echo 'JavaScript checks - run: npm run build:assets'"
  },
  "devDependencies": {
    "wp-pot": "^1.10.0",
    "clean-css-cli": "^5.6.3",
    "terser": "^5.31.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
